<!DOCTYPE html>
<html lang="en" id="js-html">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ space.title }}</title>
    <meta name="description" content="{{ space.summary }}">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | image_url }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ 'style.css' | stylesheet_url }}">
    <style>
      {% if space.background_color != empty %}
        body {
          background-color: {{ space.background_color }};
        }
      {% endif %}
      {% if space.background_image != empty %}
        body {
          background-image: {{ space.background_image }};
        }
      {% endif %}
      {% if space.text_color != empty %}
        body {
          color: {{ space.text_color }};
        }
      {% endif %}
    </style>
    {{ space.google_analytics }}
  </head>
  <body>

    <div class="wrapper" id="js-wrapper">
      <img src="{{ space.logo }}" alt="Logo">

      <h1>{{ space.heading }}</h1>
      <h2>{{ space.sub_heading }}</h2>

      {{ yield }}

    </div>

    <script src="{{ 'modernizr.js' | javascript_url }}"></script>
    <script src="{{ 'main.js' | javascript_url }}"></script>
  </body>
</html>
