<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{{ space.title }}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ space.summary }}">

    <link rel="shortcut icon" href="{{ space.favicon }}">
    <link
      rel="stylesheet"
      href="//fonts.googleapis.com/css?family={{ space.type_primary }}:400,700|{{ space.type_secondary }}:400,700"
    >

    <link rel="stylesheet" href="{{ 'style.css' | stylesheet_url }}">

    {% include "style-override" %}

    {% if space.google_analytics %}
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ space.google_analytics }}', 'auto');
        ga('send', 'pageview');
      </script>
    {% endif %}
  </head>
  <body style="
    background-color: {{ space.background_color }};
    font-family: {{ space.body_font }};
  ">

    <div class="center">
      <main class="wrapper wrapper--{% if space.product_image != empty %}two-column{% else %}one-column{% endif %}">
        {{ yield }}
      </main>
      <p class="footer-promo">Powered by Rusic, <a href="https://rusic.com">create your own landing page in two minutes for free</a>.</p>
    </div>

    {% include "icons" %}

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.7.1/clipboard.min.js"></script>
    <script src="{{ 'main.js' | javascript_url }}"></script>
    {{ content_for_footer }}
  </body>
</html>
