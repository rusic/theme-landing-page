<div class="wrapper__content">
  <header class="page-header">
    {% include 'logo' %}
    <h1>{{ space.thank_you_message }}</h1>
    <h3 class="lead">{{ space.share_message }}</h3>

    {% if idea.referrals == 0 %}
      <p>No one has signed up with your link yet</p>
    {% elsif idea.referrals == 1 %}
      <p>One person has signed up with your link</p>
    {% else %}
      <p>
        {{ idea.referrals }}
        people have signed up with your link
      </p>
    {% endif %}
  </header>

  <div class="share">
    <div class="form form--full">
      <div class="form__field form__field--action">
        <input
          type="text"
          value="http://{{ host }}{{ idea.referral_link }}"
          class="input"
          id="referral-link"
        >
        <div>
          <button
            class="button button--copy"
            data-clipboard-target="#referral-link"
          >
            Copy
          </button>
        </div>
      </div>
    </div>
  </div>

  <footer class="page-footer">
    {% include 'networks' %}
  </footer>
</div>

{% if space.product_image != empty and space.layout == "two-column" %}
  <div class="wrapper__image">
    <img src="{{ space.product_image }}"/>
  </div>
{% endif %}
