<header class="page-header">
  {% include 'logo' %}
  <h1>{{ space.post_heading }}</h1>
  <p>{{ space.sub_heading }}</p>
</header>

{% if space.referrals_enabled == "1" %}

  <div class="share">
    <h2>{{ space.thank_you_message }}</h2>
    <p>{{ space.share_message }}</p>
    <div class="form-field">
      <input type="text" readonly class="input" value="http://{{ host }}{{ idea.referral_link }}">
    </div>
  </div>

{% endif %}

<footer class="page-footer">
  {% include 'networks' %}
</footer>
