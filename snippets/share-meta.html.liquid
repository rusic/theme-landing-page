<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@{{ space.twitter_username }}">
<meta name="twitter:title" content="{{ space.title }}">
<meta name="twitter:description" content="{{ space.share_description }}">
<meta name="twitter:image" content="{{ space.share_image }}">

<meta property="og:type" content="article">
<meta property="og:title" content="{{ space.title }}">
<meta property="og:url" content="{{ space.url }}">
